<% topic.bookmarks.each do |bookmark| %>
  <%= render partial: 'bookmarks/bookmark', locals: {bookmark: bookmark, topic: bookmark.topic} %>
<% end  %>

<%= link_to new_topic_bookmark_path(topic), title: 'New Bookmark', class: "btn-lg btn-success new-bookmark-btn" do %>
  <i class="glyphicon glyphicon-plus"> </i>
<% end %>
