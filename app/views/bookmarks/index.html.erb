<p id="notice"><%= notice %></p>

<!-- REVIEW ambiguous directions - show all bookmarks for all users, or just ones you own? -->
<h2 id="bookmark-index-heading">Your Bookmarks</h2>

<% @topics.each do |topic|%>
  <div> #<%= topic.title %> </div>

  <!-- FIXME Make this display right -->
  <div class="col-md-6" style="display:inline-block;">
  <% topic.bookmarks.each do |bookmark| %>
   <%= bookmark.url %> <br> <strong>LIKE</strong>
  <% end  %>
  </div>
<% end %>


<!-- TODO load image from url? Resize/crop that image? -->
<table class="table">
  <thead>
    <tr>
      <th>Url</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= link_to bookmark.url, bookmark.url %></td>
        <td><%= bookmark.topic.title %></td>
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookmark', new_bookmark_path %>
