<% topic.bookmarks.each do |bookmark| %>
<div class="image-wrapper">
  <!-- TODO replace with embedly-->
  <%= link_to image_tag("http://driph.com/words/wp-content/uploads/2008/04/e.gif", size: "120x120"), bookmark.url  %>

  <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>

  <%= link_to edit_topic_bookmark_path(topic, bookmark), title: "Edit Bookmark" do %>
    <i class="glyphicon glyphicon-edit"></i>
  <% end %>

  <%= link_to topic_bookmark_path(topic, bookmark), method: :delete, title: "Delete Bookmark"  do %>
    <i class="glyphicon glyphicon-trash"> </i>
  <% end %>
</div>
<% end  %>

